    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <avalonDock:DockingManager Grid.Row="0">
            <avalonDock:DockingManager.Theme>
