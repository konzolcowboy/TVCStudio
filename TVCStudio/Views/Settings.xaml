                                                <WrapPanel>
                                                    <TextBlock FontFamily="{Binding BasicEditorFont}" FontSize="{Binding BasicEditorFontSize}" Foreground="{Binding BasicRowSymbolColor}">@kivonas@</TextBlock>
                                                    <TextBlock FontFamily="{Binding BasicEditorFont}" FontSize="{Binding BasicEditorFontSize}" Foreground="{Binding BasicKeywordColor}">PRINT</TextBlock>
                                                    <TextBlock FontFamily="{Binding BasicEditorFont}" FontSize="{Binding BasicEditorFontSize}" Foreground="{Binding BasicNumberColor}">100</TextBlock>
                                                    <TextBlock FontFamily="{Binding BasicEditorFont}" FontSize="{Binding BasicEditorFontSize}" Foreground="{Binding BasicForegroundColor}">-</TextBlock>
                                                    <TextBlock FontFamily="{Binding BasicEditorFont}" FontSize="{Binding BasicEditorFontSize}" Foreground="{Binding BasicNumberColor}">50</TextBlock>
                                                </WrapPanel>
                                                <WrapPanel>
                                                    <TextBlock FontFamily="{Binding BasicEditorFont}" FontSize="{Binding BasicEditorFontSize}" Foreground="{Binding BasicKeywordColor}">GOTO</TextBlock>
                                                    <TextBlock FontFamily="{Binding BasicEditorFont}" FontSize="{Binding BasicEditorFontSize}" Foreground="{Binding BasicRowSymbolColor}">@kivonas@</TextBlock>
                                                </WrapPanel>
                                            </StackPanel>
                                        </Grid>
                                    </GroupBox>
                                </StackPanel>
                            </Grid>
                        </avalonDock:LayoutDocument>
                        <avalonDock:LayoutDocument Title="Általános" CanClose="False" CanFloat="False">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <WrapPanel Grid.Row="0">
                                    <TextBlock Margin="0 13 0 0">Az alkalmazás stílusa:</TextBlock>
                                    <ComboBox Margin="0 10 0 0" ItemsSource="{Binding ThemeList}" DisplayMemberPath="Name" IsSynchronizedWithCurrentItem="True" SelectedItem="{Binding SelectedThemeData}"/>
                                </WrapPanel>
                                <GroupBox Grid.Row="1" Margin="0 10 0 0" Header="Emulátor beállítások">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="Emulátor:" Margin="0 13 0 0" />
                                            <TextBox Grid.Column="1" FontWeight="Bold" IsReadOnly="True"  Text="{Binding Path=EmulatorPath}" Width="600" Margin="5 13 0 0" />
                                            <Button Grid.Column="2" Command="{Binding SelectEmulatorCommand}" Width="110" Margin="0 13 0 0">
                                                <TextBlock Text ="Kiválasztás" />
                                            </Button>
                                        </Grid>
                                        <TextBlock FontWeight="Bold" Margin="0 23 0 0" Text ="Argumentumok (használható file konstans %CAS%):" />
                                        <TextBox Height="100" Text="{Binding Path=EmulatorArguments}" Margin="0,20,505,0"  Width="380" />
                                    </StackPanel>
                                </GroupBox>
                                <GroupBox Grid.Row="2" Margin="0 10 0 0" Header="Egyéb beállítások">
                                    <StackPanel>
                                        <CheckBox IsChecked="{Binding Path=AutoIntellisence}" Margin="0,6,0,0">Kódkiegészítő ablak automatikus megjelenítése gépeléskor.</CheckBox>
                                        <CheckBox IsChecked="{Binding Path=RunAfterSucessfulBuild}" Margin="0,6,0,0">Program azonnali indítása sikeres fordítás után.</CheckBox>
                                        <CheckBox IsChecked="{Binding Path=ClearOutputBeforeBuild}" Margin="0,6,0,0">Kimeneti ablak törlése fordítás előtt.</CheckBox>
                                    </StackPanel>
                                </GroupBox>
                            </Grid>
                        </avalonDock:LayoutDocument>
                    </avalonDock:LayoutDocumentPane>
                </avalonDock:LayoutPanel>
            </avalonDock:LayoutRoot>
        </avalonDock:DockingManager>
        <Grid Grid.Row="1">
            <Button Margin="10 10 0 10" Command="{Binding Path=ResetSettingsCommand}" HorizontalAlignment="Left">
                <TextBlock Text="Alapértelmezés" />
            </Button>
            <Button Margin="0 10 10 10" Click="SaveClick" HorizontalAlignment="Right">
                <TextBlock Text="Alkalmaz" />
            </Button>
        </Grid>
    </Grid>
</Window>
