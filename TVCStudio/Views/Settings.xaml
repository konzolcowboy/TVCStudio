                                                <TextBlock Margin="0,0,0,12" VerticalAlignment="Center">Ciklus idő háttérszíne:</TextBlock>
                                                <TextBlock Margin="0,0,0,12" VerticalAlignment="Center">Regiszterek színe:</TextBlock>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1">
                                                <ComboBox Margin="0,12,0,5" ItemsSource="{Binding Brushes}" SelectedItem="{Binding BackgroundColor}" VerticalAlignment="Center">
