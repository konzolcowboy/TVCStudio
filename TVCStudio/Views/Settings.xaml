                                            <CheckBox IsChecked="{Binding Path=MarkInactiveCode}" Margin="0,0,0,6">Inaktív kód megjelőlése</CheckBox>
                                            <CheckBox IsChecked="{Binding Path=ShowClockCycles}" Margin="0,0,0,6">Ciklusidő megjelenítése a Z80 utasítások soraiban</CheckBox>
                                        </StackPanel>
                                    </GroupBox>
                                    <GroupBox Margin="3,6,0,3" Header="Kódszerkesztő stílusa">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0" Margin="0,15,0,0">
                                                <TextBlock Margin="0,0,0,12" VerticalAlignment="Center">Szerkesztő háttérszíne:</TextBlock>
                                                <TextBlock Margin="0,0,0,12" VerticalAlignment="Center">Szerkesztő betűszíne:</TextBlock>
                                                <TextBlock Margin="0,0,0,12" VerticalAlignment="Center">String-ek színe:</TextBlock>
                                                <TextBlock Margin="0,0,0,12" VerticalAlignment="Center">Megjegyzések színe:</TextBlock>
                                                <TextBlock Margin="0,0,0,12" VerticalAlignment="Center">Processzor utasítások színe:</TextBlock>
                                                <TextBlock Margin="0,0,0,12" VerticalAlignment="Center">Assembler utasítások színe:</TextBlock>
                                                <TextBlock Margin="0,0,0,12" VerticalAlignment="Center">Preprocesszor utasítások színe:</TextBlock>
                                                <TextBlock Margin="0,0,0,12" VerticalAlignment="Center">Számok, kifejezések színe:</TextBlock>
                                                <TextBlock Margin="0,0,0,12" VerticalAlignment="Center">Inaktív kód színe:</TextBlock>
