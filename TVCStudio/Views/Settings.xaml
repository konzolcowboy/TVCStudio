                                                </ComboBox>
                                                <ComboBox Margin="0,0,0,5" ItemsSource="{Binding Brushes}" SelectedItem="{Binding BasicStringColor}" VerticalAlignment="Center">
                                                    <ComboBox.ItemTemplate>
                                                        <DataTemplate>
