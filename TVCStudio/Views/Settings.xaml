                                                <xctk:IntegerUpDown Width="70" Minimum="8" Maximum="50" Value="{Binding Path=BasicEditorFontSize, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                                            </StackPanel>
