                                                <xctk:IntegerUpDown Width="70" Minimum="8" Maximum="50" Value="{Binding Path=EditorFontSize, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                                            </StackPanel>
                                        </Grid>
                                    </GroupBox>
                                    <GroupBox Margin="5,8,0,0" Header="Kódszerkesztő előnézet">
                                        <Grid Margin="2 8 2 2" Width="400" Height="198" Background="{Binding BackgroundColor}">
                                            <StackPanel>
                                                <TextBlock FontFamily="{Binding EditorFont}" FontSize="{Binding EditorFontSize}" Margin="8 8 0 0" Foreground="{Binding PreprocessorInstructionColor}">#define TVC</TextBlock>
                                                <TextBlock FontFamily="{Binding EditorFont}" FontSize="{Binding EditorFontSize}"  Margin="8 0 0 0" Foreground="{Binding PreprocessorInstructionColor}">#ifdef TVC</TextBlock>
                                                <WrapPanel>
                                                    <TextBlock FontFamily="{Binding EditorFont}" FontSize="{Binding EditorFontSize}"  Margin="12 0 12 0" Foreground="{Binding ForegroundColor}">MATEK</TextBlock>
                                                    <TextBlock FontFamily="{Binding EditorFont}" FontSize="{Binding EditorFontSize}"  Margin="0 0 12 0" Foreground="{Binding AssemblerInstruction}">EQU</TextBlock>
                                                    <TextBlock FontFamily="{Binding EditorFont}" FontSize="{Binding EditorFontSize}"  Margin="0 0 12 0" Foreground="{Binding ExpressionColor}">ABS($45)+$FF</TextBlock>
                                                    <TextBlock FontFamily="{Binding EditorFont}" FontSize="{Binding EditorFontSize}"  Margin="0 0 0 0" Foreground="{Binding CommentColor}">;Matek címzés</TextBlock>
                                                </WrapPanel>
                                                <WrapPanel>
                                                    <TextBlock FontFamily="{Binding EditorFont}" FontSize="{Binding EditorFontSize}"  Margin="12 0 6 0" Foreground="{Binding ForegroundColor}">SPRITE</TextBlock>
                                                    <TextBlock FontFamily="{Binding EditorFont}" FontSize="{Binding EditorFontSize}"  Margin="0 0 16 0" Foreground="{Binding AssemblerInstruction}">DB</TextBlock>
                                                    <TextBlock FontFamily="{Binding EditorFont}" FontSize="{Binding EditorFontSize}"  Margin="0 0 0 0" Foreground="{Binding ExpressionColor}">$12</TextBlock>
                                                    <TextBlock FontFamily="{Binding EditorFont}" FontSize="{Binding EditorFontSize}"  Margin="0 0 0 0" Foreground="{Binding ForegroundColor}">,</TextBlock>
                                                    <TextBlock FontFamily="{Binding EditorFont}" FontSize="{Binding EditorFontSize}"  Margin="0 0 0 0" Foreground="{Binding ExpressionColor}">$FA</TextBlock>
                                                    <TextBlock FontFamily="{Binding EditorFont}" FontSize="{Binding EditorFontSize}"  Margin="0 0 0 0" Foreground="{Binding ForegroundColor}">,</TextBlock>
                                                    <TextBlock FontFamily="{Binding EditorFont}" FontSize="{Binding EditorFontSize}"  Margin="0 0 0 0" Foreground="{Binding ExpressionColor}">123</TextBlock>
                                                    <TextBlock FontFamily="{Binding EditorFont}" FontSize="{Binding EditorFontSize}"  Margin="0 0 0 0" Foreground="{Binding ForegroundColor}">,</TextBlock>
                                                    <TextBlock FontFamily="{Binding EditorFont}" FontSize="{Binding EditorFontSize}"  Margin="0 0 6 0" Foreground="{Binding ExpressionColor}">89</TextBlock>
                                                    <TextBlock FontFamily="{Binding EditorFont}" FontSize="{Binding EditorFontSize}"  Margin="0 0 0 0" Foreground="{Binding CommentColor}">;Szerkesztő kéne</TextBlock>
                                                </WrapPanel>
                                                <WrapPanel>
                                                    <TextBlock FontFamily="{Binding EditorFont}" FontSize="{Binding EditorFontSize}"  Margin="12 0 6 0" Foreground="{Binding ForegroundColor}">SZOVEG</TextBlock>
                                                    <TextBlock FontFamily="{Binding EditorFont}" FontSize="{Binding EditorFontSize}"  Margin="0 0 16 0" Foreground="{Binding AssemblerInstruction}">DB</TextBlock>
                                                    <TextBlock FontFamily="{Binding EditorFont}" FontSize="{Binding EditorFontSize}"  Margin="0 0 0 0" Foreground="{Binding StringColor}">"VIDEOTON TVC"</TextBlock>
                                                </WrapPanel>
                                                <WrapPanel>
                                                    <TextBlock FontFamily="{Binding EditorFont}" FontSize="{Binding EditorFontSize}"  Margin="3 0 12 0" Foreground="{Binding ClockCycleColor}">[7]</TextBlock>
                                                    <TextBlock FontFamily="{Binding EditorFont}" FontSize="{Binding EditorFontSize}"  Margin="12 0 12 0" Foreground="{Binding ForegroundColor}">CÍMKE</TextBlock>
                                                    <TextBlock FontFamily="{Binding EditorFont}" FontSize="{Binding EditorFontSize}"  Margin="0 0 12 0" Foreground="{Binding ProcessorInstruction}">LD</TextBlock>
                                                    <TextBlock FontFamily="{Binding EditorFont}" FontSize="{Binding EditorFontSize}"  Margin="0 0 12 0" Foreground="{Binding RegisterColor}">HL,</TextBlock>
                                                    <TextBlock FontFamily="{Binding EditorFont}" FontSize="{Binding EditorFontSize}"  Margin="0 0 0 0" Foreground="{Binding ExpressionColor}">$FFFF</TextBlock>
                                                </WrapPanel>
                                                <TextBlock FontFamily="{Binding EditorFont}" FontSize="{Binding EditorFontSize}"  Margin="8 0 0 0" Foreground="{Binding PreprocessorInstructionColor}">#endif</TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </GroupBox>
                                </StackPanel>
                            </Grid>
                        </avalonDock:LayoutDocument>
                        <avalonDock:LayoutDocument Title="Basic szerkesztő" CanClose="False" CanFloat="False">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <GroupBox Margin="3,6,0,3" Header="Kódszerkesztő stílusa">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0" Margin="0,15,0,0">
                                                <TextBlock Margin="0,0,0,12" VerticalAlignment="Center">Szerkesztő háttérszíne:</TextBlock>
                                                <TextBlock Margin="0,0,0,12" VerticalAlignment="Center">Szerkesztő betűszíne:</TextBlock>
