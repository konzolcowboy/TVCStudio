                                                    <ComboBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Background="{Binding}" Foreground="{Binding}" Text="{Binding}"/>
                                                        </DataTemplate>
                                                    </ComboBox.ItemTemplate>
                                                </ComboBox>
                                            </StackPanel>
                                        </Grid>
                                    </GroupBox>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <GroupBox Margin="5,2,0,0" Header="Kódformázás">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <!--<TextBlock Margin="0 1 0 10">Legelső kódsor sorszáma:</TextBlock>
                                                <TextBlock Margin="0 0 0 10">Sornövekmény:</TextBlock>-->
                                                <TextBlock Margin="0 0 0 8">Szerkesztő betűtípusa:</TextBlock>
                                                <TextBlock Margin="0 0 0 8">Szerkesztő betűmérete(px):</TextBlock>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1">
